<h1>DASHBOARD 🌊 🏄🏽‍♂️</h1>

<h1>View Your Bookings 🌊 🏄🏽‍♂️</h1>
<ul>
  <% @bookings.each do |booking| %>
    <li>
      <%= link_to booking.surfboard.name, surfboard_path(booking.surfboard) %>
      <p><%= image_tag booking.surfboard.image_url if booking.surfboard.image_url.present? %></p>
      <p><strong>Price:</strong> $<%= booking.surfboard.price %></p>
      <p><strong>Color:</strong> <%= booking.surfboard.color %></p>
      <p><strong>Size:</strong> <%= booking.surfboard.size %></p>
      <p><%= link_to booking_path(booking),
      data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } do %>
      <i class="fas fa-trash-alt"></i>
    <% end %></p>
    </li>
  <% end %>
</ul>
<p>
  <h1>View Your Surfboards 🌊 🏄🏽‍♂️</h1>
<p>
  <ul>
  <% @surfboards.where(user_id: current_user.id).each do |surfboard| %>
    <li>
      <%= link_to surfboard.name, surfboard_path(surfboard) %>
      <p><%= image_tag surfboard.image_url if surfboard.image_url.present? %></p>
      <p><strong>Price:</strong> $<%= surfboard.price %></p>
      <p><strong>Color:</strong> <%= surfboard.color %></p>
      <p><strong>Size:</strong> <%= surfboard.size %></p>
    </li>
  <% end %>
</ul>
</p>
</p>
<br>
<h1>View Your Booking Requests 🌊 🏄🏽‍♂️</h1>
<p>
  <ul>
  <% @bookings.each do |booking| %>
    <li>
      <h2>Booking for <%= booking.surfboard.name %></h2>
      <p><%= image_tag booking.surfboard.image_url if booking.surfboard.image_url.present? %></p>
      <p><strong>Start Time:</strong> <%= booking.start_time %></p>
      <p><strong>End Time:</strong> <%= booking.end_time %></p>
      <p><strong>Price:</strong> $<%= booking.surfboard.price %></p>
      <p><strong>Color:</strong> <%= booking.surfboard.color %></p>
      <p><strong>Size:</strong> <%= booking.surfboard.size %></p>
    </li>
  <% end %>
</ul>
</p>
<br>
