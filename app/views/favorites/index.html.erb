<div class="container mt-5">
  <div class="header">
    <h1>My Favourites</h1>
  </div>
  <div class="row">
    <% @favorites.each do |favorite| %>
      <div class="col-md-4 mb-4">
        <div class="card" style="height: 100%; display: flex; flex-direction: column;">
          <% if favorite.surfboard.photo.attached? %>
            <%= cl_image_tag favorite.surfboard.photo.key, class: "card-img-top", style: "width: 100%; height: 200px; object-fit: contain;" %>
          <% else %>
            <img src="<%= favorite.surfboard.image_url %>" alt="<%= favorite.surfboard.name %>" class="card-img-top" style="width: 100%; height: 200px; object-fit: contain;">
          <% end %>
          <div class="card-body d-flex flex-column" style="flex-grow: 1;">
            <h5 class="card-title"><%= favorite.surfboard.name %></h5>
            <p><strong>Price:</strong> $<%= favorite.surfboard.price %></p>
            <p><strong>Size:</strong> <%= favorite.surfboard.size %></p>
            <%= link_to favorite_path(favorite), method: :delete, data: { turbo_method: :delete, turbo_confirm: "Are you sure you want to remove this from your favorites?" }, class: "btn btn-warning btn-sm mt-auto" do %>
              <i class="fas fa-trash-alt"></i>
            <% end %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
